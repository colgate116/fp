<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#EDE9E9">

    <include layout="@layout/toolbar"
        android:id="@+id/actionBar"
        />
    <ImageButton
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/save_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_save"
        app:tint="#EDE9E9"
        />

    <ImageButton
        android:id="@+id/back_income"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#EDE9E9"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:id="@+id/date"
        android:textSize="20sp"
        />
    <Spinner
        android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/spinner"
    app:layout_constraintTop_toBottomOf="@+id/actionBar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="@string/add_sum"
        android:gravity="center_horizontal"
        android:id="@+id/add_sum"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="22sp"
        />
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_sum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/annotation_dialog"
        android:hint="@string/add_annotation"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="22sp"
        />
    <ImageButton
        android:id="@+id/ras1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/transport"
        app:layout_constraintTop_toBottomOf="@+id/annotation_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/ras2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/produkts"
        app:layout_constraintTop_toBottomOf="@+id/annotation_dialog"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/ras3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shmot"
        app:layout_constraintTop_toBottomOf="@+id/annotation_dialog"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/ras4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/koleso"
        app:layout_constraintTop_toBottomOf="@+id/ras1"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/ras5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/stul"
        app:layout_constraintTop_toBottomOf="@+id/ras2"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/ras6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/podarok1"
        app:layout_constraintTop_toBottomOf="@+id/ras3"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/ras7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/nalogs"
        app:layout_constraintTop_toBottomOf="@+id/ras4"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/ras8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/pills"
        app:layout_constraintTop_toBottomOf="@+id/ras5"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/ras9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/kredit"
        app:layout_constraintTop_toBottomOf="@+id/ras6"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/ras10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/cafe"
        app:layout_constraintTop_toBottomOf="@+id/ras7"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/ras11"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/family"
        app:layout_constraintTop_toBottomOf="@+id/ras8"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/ras12"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/meloch"
        app:layout_constraintTop_toBottomOf="@+id/ras9"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras1"
        app:layout_constraintStart_toStartOf="@+id/ras1"
        app:layout_constraintEnd_toEndOf="@+id/ras1"
        android:gravity="center"
        android:text="Транспорт"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras2"
        app:layout_constraintStart_toStartOf="@+id/ras2"
        app:layout_constraintEnd_toEndOf="@+id/ras2"
        android:gravity="center"
        android:text="Продукты"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras3"
        app:layout_constraintStart_toStartOf="@+id/ras3"
        app:layout_constraintEnd_toEndOf="@+id/ras3"
        android:gravity="center"
        android:text="Одежда"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras4"
        app:layout_constraintStart_toStartOf="@+id/ras4"
        app:layout_constraintEnd_toEndOf="@+id/ras4"
        android:gravity="center"
        android:text="Развлечения"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras5"
        app:layout_constraintStart_toStartOf="@+id/ras5"
        app:layout_constraintEnd_toEndOf="@+id/ras5"
        android:gravity="center"
        android:text="Дом"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras6"
        app:layout_constraintStart_toStartOf="@+id/ras6"
        app:layout_constraintEnd_toEndOf="@+id/ras6"
        android:gravity="center"
        android:text="Подарки"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras7"
        app:layout_constraintStart_toStartOf="@+id/ras7"
        app:layout_constraintEnd_toEndOf="@+id/ras7"
        android:gravity="center"
        android:text="Долги"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras8"
        app:layout_constraintStart_toStartOf="@+id/ras8"
        app:layout_constraintEnd_toEndOf="@+id/ras8"
        android:gravity="center"
        android:text="Лекарства"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras9"
        app:layout_constraintStart_toStartOf="@+id/ras9"
        app:layout_constraintEnd_toEndOf="@+id/ras9"
        android:gravity="center"
        android:text="Кредит"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras10"
        app:layout_constraintStart_toStartOf="@+id/ras10"
        app:layout_constraintEnd_toEndOf="@+id/ras10"
        android:gravity="center"
        android:text="Кафе"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras11"
        app:layout_constraintStart_toStartOf="@+id/ras11"
        app:layout_constraintEnd_toEndOf="@+id/ras11"
        android:gravity="center"
        android:text="Семья"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/but12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ras12"
        app:layout_constraintStart_toStartOf="@+id/ras12"
        app:layout_constraintEnd_toEndOf="@+id/ras12"
        android:gravity="center"
        android:text="Мелочи"
        android:textColor="@color/black"
        />




</androidx.constraintlayout.widget.ConstraintLayout>